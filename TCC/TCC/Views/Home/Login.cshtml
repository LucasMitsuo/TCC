
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="container" style="margin-top:100px;position:relative;">

    <h1 class="text-center" style="color:#5bc0de">Social Care</h1>
    <br />
    @using (Html.BeginForm("Formulario", "Home", FormMethod.Post))
    {
        
        <div class="form-group" style="padding-left:37%; ">
            <label for="exampleInputEmail1" style="color:#5bc0de">Login</label>
            <input type="text" class="form-control" name="login" placeholder="Login">
        </div>
        <div class="form-group" style="padding-left:37%; ">
            <label for="exampleInputPassword1" style="color:#5bc0de">Senha</label>
            <input type="password" class="form-control" name="senha" placeholder="Senha">
        </div>

        <br />

        <button type="submit" class="btn btn-default" style="left:40%;position:relative">Limpar</button>
        <button type="submit" class="btn btn-info" style="left:45%;position:relative">Entrar</button>
       
    }

</div>